# api/.env.example

# Application
NODE_ENV=development
PORT=3000
APP_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
APP_VERSION=1.0.0 

# Database
MONGO_URI=mongodb://localhost:27017/api-lens

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Optional - for production)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@apilens.com

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring Configuration
DEFAULT_CHECK_FREQUENCY=1h
MAX_RETRIES=3
REQUEST_TIMEOUT=10000
BATCH_SIZE=10

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Notification Configuration
DEFAULT_NOTIFICATION_CHANNELS=in-app,email
WEBHOOK_TIMEOUT=5000
EMAIL_RETRIES=3

# Security Configuration
BCRYPT_ROUNDS=12
TOKEN_LENGTH=32
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Storage Configuration
MAX_SNAPSHOT_RETENTION=30
MAX_CHANGELOG_RETENTION=90
COMPRESSION_ENABLED=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_FILE_LOGGING=false
LOG_DIRECTORY=./logs

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS=false
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# External Services
SWAGGER_VALIDATOR_URL=https://validator.swagger.io/validator
OPENAPI_VALIDATOR_ENABLED=false
