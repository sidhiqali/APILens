{
  "name": "apilens-vscode",
  "displayName": "APILens - API Change Monitoring",
  "description": "Intelligent API change detection, monitoring, and alerting system for OpenAPI specifications",
  "version": "1.1.0",
  "publisher": "sidhiqali",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Debuggers",
    "Testing"
  ],
  "keywords": [
    "api",
    "monitoring",
    "openapi",
    "swagger",
    "changelog",
    "tracking"
  ],
  "activationEvents": [
    "onView:apilens.main",
    "onView:apilens.apiDetail",
    "onCommand:apilens.showApiDetail"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "apilens.openPanel",
        "title": "Open APILens",
        "category": "APILens",
        "icon": "$(globe)"
      },
      {
        "command": "apilens.refreshData",
        "title": "Refresh Data",
        "category": "APILens",
        "icon": "$(refresh)"
      },
      {
        "command": "apilens.addApi",
        "title": "Add API",
        "category": "APILens",
        "icon": "$(add)"
      },
      {
        "command": "apilens.viewAnalytics",
        "title": "View Analytics",
        "category": "APILens",
        "icon": "$(graph)"
      },
      {
        "command": "apilens.viewNotifications",
        "title": "View Notifications",
        "category": "APILens",
        "icon": "$(bell)"
      },
      {
        "command": "apilens.viewChanges",
        "title": "View Changes",
        "category": "APILens",
        "icon": "$(git-compare)"
      },
      {
        "command": "apilens.showApiDetail",
        "title": "Show API Detail",
        "category": "APILens"
      },
      {
        "command": "apilens.registerApiFromFile",
        "title": "Register API with APILens",
        "category": "APILens"
      },
      {
        "command": "apilens.importApiSpec",
        "title": "Import to APILens",
        "category": "APILens"
      },
      {
        "command": "apilens.validateOpenAPI",
        "title": "Validate OpenAPI Spec",
        "category": "APILens"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "apilens",
          "title": "APILens",
          "icon": "$(globe)"
        }
      ]
    },
    "views": {
      "apilens": [
        {
          "id": "apilens.main",
          "name": "APILens Dashboard",
          "type": "webview"
        }
      ],
      "explorer": [
        {
          "id": "apilens.apiDetail",
          "name": "API Details",
          "when": "apilens.hasApis"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "apilens.apiDetail",
        "contents": "No API selected.\n[Open APILens](command:apilens.openPanel) to select an API for detailed view."
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "apilens.openPanel"
        },
        {
          "command": "apilens.refreshData"
        },
        {
          "command": "apilens.addApi"
        },
        {
          "command": "apilens.viewAnalytics"
        },
        {
          "command": "apilens.viewNotifications"
        },
        {
          "command": "apilens.viewChanges"
        }
      ],
      "explorer/context": [
        {
          "command": "apilens.registerApiFromFile",
          "when": "resourceExtname =~ /\\.(json|yaml|yml)$/",
          "group": "apilens@1"
        },
        {
          "command": "apilens.importApiSpec",
          "when": "resourceExtname =~ /\\.(json|yaml|yml)$/",
          "group": "apilens@2"
        },
        {
          "command": "apilens.validateOpenAPI",
          "when": "resourceExtname =~ /\\.(json|yaml|yml)$/",
          "group": "apilens@3"
        }
      ],
      "view/title": [
        {
          "command": "apilens.refreshData",
          "when": "view == apilens.main",
          "group": "navigation",
          "icon": "$(refresh)"
        }
      ]
    },
    "configuration": {
      "title": "APILens",
      "properties": {
        "apilens.apiUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "APILens backend URL"
        },
        "apilens.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Auto refresh data every 30 seconds"
        },
        "apilens.refreshInterval": {
          "type": "number",
          "default": 30000,
          "description": "Auto refresh interval in milliseconds"
        },
        "apilens.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show desktop notifications for API changes"
        },
        "apilens.enableRealtime": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time updates via WebSocket"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "@types/webidl-conversions": "^7.0.3",
    "@types/whatwg-url": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "js-yaml": "^4.1.0",
    "socket.io-client": "^4.7.2"
  }
}
